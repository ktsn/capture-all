{
  "name": "capture-all",
  "version": "0.2.1",
  "author": "katashin",
  "description": "Flexible utility to get screenshots from Web pages",
  "keywords": [
    "screenshot",
    "snapshot",
    "capture",
    "utility",
    "puppeteer",
    "chrome"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/capture-all",
  "bugs": "https://github.com/ktsn/capture-all/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/capture-all.git"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run test && npm run build",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "npm run build && jest --watch",
    "lint": "tslint -p . && prettier --list-different \"{src,scripts,test}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,scripts,test}/**/*.{js,ts}\"",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "npm run build && jest",
    "snapshot": "npm run build && jest --updateSnapshot"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test/tsconfig.json"
      }
    }
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.1",
    "@types/jest": "^22.1.4",
    "@types/puppeteer": "^1.0.1",
    "jest": "^22.4.2",
    "jest-image-snapshot": "^2.3.0",
    "prettier": "1.11.0",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-ktsn": "^2.1.0",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "puppeteer": "^1.1.1",
    "temp-dir": "^1.0.0"
  }
}
