{
  "name": "capture-all",
  "version": "1.0.0",
  "author": "katashin",
  "description": "Flexible utility to get screenshots from Web pages",
  "keywords": [
    "screenshot",
    "snapshot",
    "capture",
    "utility",
    "puppeteer",
    "chrome"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/capture-all",
  "bugs": "https://github.com/ktsn/capture-all/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/capture-all.git"
  },
  "scripts": {
    "prepublishOnly": "yarn clean && yarn test && yarn build",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "jest --watch",
    "lint": "tslint -p . && prettier --list-different \"{src,scripts,test}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,scripts,test}/**/*.{js,ts}\"",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "jest",
    "snapshot": "jest --updateSnapshot"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsConfig": "test/tsconfig.json"
        }
      ]
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.0.2",
    "@types/jest-image-snapshot": "^5.1.0",
    "@types/puppeteer": "^5.4.6",
    "jest": "^29.0.3",
    "jest-image-snapshot": "^5.2.0",
    "prettier": "2.8.1",
    "temp-dir": "^2.0.0",
    "ts-jest": "^29.0.1",
    "tslint": "^5.20.1",
    "tslint-config-ktsn": "^2.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "puppeteer": "^17.1.3"
  }
}
