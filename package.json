{
  "name": "capture-all",
  "version": "0.5.0",
  "author": "katashin",
  "description": "Flexible utility to get screenshots from Web pages",
  "keywords": [
    "screenshot",
    "snapshot",
    "capture",
    "utility",
    "puppeteer",
    "chrome"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/capture-all",
  "bugs": "https://github.com/ktsn/capture-all/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/capture-all.git"
  },
  "scripts": {
    "prepublishOnly": "yarn clean && yarn test && yarn build",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "jest --watch",
    "lint": "tslint -p . && prettier --list-different \"{src,scripts,test}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,scripts,test}/**/*.{js,ts}\"",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "jest",
    "snapshot": "jest --updateSnapshot"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "test/tsconfig.json"
      }
    }
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.23",
    "@types/jest-image-snapshot": "^2.11.0",
    "@types/puppeteer": "^2.0.0",
    "jest": "^24.9.0",
    "jest-image-snapshot": "^3.1.0",
    "prettier": "1.19.1",
    "temp-dir": "^2.0.0",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-ktsn": "^2.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "puppeteer": "^2.0.0"
  }
}
